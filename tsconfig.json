{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build/ts"
  },
  "exclude": [
    "build",
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}
